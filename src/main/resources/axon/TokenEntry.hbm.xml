<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.axonframework.eventhandling.tokenstore.jpa" default-access="field">

    <typedef class="com.example.oidtypeconversion.JsonUserType" name="JsonUserType"/>

    <class name="TokenEntry">
        <composite-id>
            <key-property name="processorName"/>
            <key-property name="segment"/>
        </composite-id>

        <property name="timestamp"/>
        <property name="owner"/>
        <property name="tokenType"/>

        <!-- Mapping jsonb token field -->
        <property name="token" type="JsonUserType">
            <column name="token" sql-type="jsonb"/>
        </property>
    </class>

</hibernate-mapping>
